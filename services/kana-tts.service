[Unit]
Description=kana tts daemon
After=voicevox.service kagome-daemon.service
Requires=voicevox.service kagome-daemon.service

[Service]
Type=simple
User=YOUR_USERNAME
ExecStartPre=/usr/bin/sleep 5
ExecStart=/usr/bin/npm run production
WorkingDirectory=/home/YOUR_USERNAME/kana-tts-discord/
TimeoutSec=60
Restart=always

[Install]
WantedBy=multi-user.target
